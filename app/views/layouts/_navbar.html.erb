<div class="flex justify-between bg-blue-700 w-full h-12 shadow-md">
  <div class="flex">
    <div class="self-center m-6">
      <%= link_to 'Home', root_path, class: 'text-white font-bold' %>
    </div>
    <div class="self-center mr-6">
      <%= link_to 'Browse Posts >>', posts_path, class: 'text-white' %>
    </div>
    <div class="self-center mr-6">
      <%= link_to 'Browse Categories >>', post_categories_path, class: 'text-white' %>
    </div>
  </div>

  <div class="mt-2 mr-4">
    <%= form_with url: search_path, local: true, method: :get, class: 'flex justify-end ' do |f| %>
      <%= f.text_field :q, class: 'w-6/12 h-8 mr-4 rounded px-2', placeholder: 'Search for a term' %>
      <%= button_tag 'Search', type: 'submit', class: 'border-2 rounded border-white text-white h-8 px-4 font-semibold' %>
    <% end %>
  </div>
</div>