<%= form_with(model: post, local: true, id: 'post-form') do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 mb-4">
    <%= label_for form, :title %>
    <%= input_text form, :title %>
  </div>

  <div class="grid grid-cols-1 mb-4">
    <%= label_for form, :post_category_id %>

    <% post_category = @post.post_category %>
    <% post_category_id = nil %>
    <% unless post_category.nil? then post_category_id = @post.post_category_id end %>
    <% unless @post_category_id.nil? then post_category_id = @post_category_id end %>
    <%= form.select :post_category_id, PostCategory.all.collect { |c| [c.name, c.id] }, { selected: post_category_id, include_blank: true }, { class: 'border border-grey-400 rounded h-8 cursor-pointer' } %>
  </div>

  <div class="field">
    <%= label_for form, :content %>
    <div class="">
      <%= form.rich_text_area :content, class: 'mt-4' %>
    </div>
  </div>

<!--  <div class="">-->
    <%#= form.fields_for :tags do |tag_builder| %>
      <%#= tag_builder.label :name, 'Add new' %>
      <%#= input_text tag_builder, :name %>
    <%# end %>
<!--  </div>-->

  <div class="flex mt-4 p-2 border border-gray-800 rounded h-12">
    <span id="tags-container">
      <% @post.tags.each do |tag| %>
        <span class="saved-label rounded border-gray-500 border bg-gray-100 px-2 py-1 mr-2 block h-8 inline-flex" data-label_id="<%= tag.id %>"><%= tag.name %></span>
      <% end %>
    </span>
    <%= text_field_tag :q, '', { placeholder: "Search", data: { behavior: "autocomplete" }, class: "px-2 rounded border border-blue-700 h-8", id: 'tag-search' } %>
  </div>

  <%# TODO: Add hidden inputs too %>
  <% @post.tags.each_with_index do |tag, index| %>
    <%= text_field_tag 'post[tag_ids][]', tag.id, { id: "post_tag_ids_#{index}", hidden: 'hidden'} %>
  <% end %>
  <%# If no tag ids pass the array empty so that it destroys everything else %>
  <%= text_field_tag 'post[tag_ids][]', "", { id: "post_tag_ids_empty", hidden: 'hidden'} %>

  <div class="actions">
    <%= submit_button form %>
  </div>
<% end %>


