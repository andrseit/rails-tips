<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 mb-4">
    <%= label_for form, :title %>
    <%= input_text form, :title %>
  </div>

  <div class="grid grid-cols-1 mb-4">
    <%= label_for form, :post_category_id %>
    <%= form.select :post_category_id, PostCategory.all.collect { |c| [c.name, c.id] }, { include_blank: true }, { class: 'border border-grey-400 rounded h-8 cursor-pointer' } %>
  </div>

  <div class="field">
    <%= label_for form, :content %>
    <div class="">
      <%= form.rich_text_area :content, class: 'mt-4' %>
    </div>
  </div>

  <div class="actions">
    <%= submit_button form %>
  </div>
<% end %>
