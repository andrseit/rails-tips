<p id="notice"><%= notice %></p>

<div class="post-show">
  <div>
    <%= h1_header @post.title %>
  </div>
  <% post_category = @post.post_category %>

  <% unless post_category.nil? %>
    <span class="p-1 pl-4 text-gray-900 text-sm italic mb-4 block">View more posts from category: <%= link_simple post_category.name, post_category_path(post_category) %></span>
  <% end %>

  <div class="rounded border border-gray-300 bg-gray-100 p-4 mb-4 w-full lg:w-2/4">
    <p>
      <%= @post.content %>
    </p>
  </div>

  <div class="inline-block flex">
    <% @post.tags.each do |tag| %>
      <%= render partial: 'tag_box', locals: { tag: tag } %>
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-1 mt-2">
    <div class="text-xs text-gray-700 pl-1">Created at: <%= @post.created_at.localtime.strftime '%Y-%m-%d %H:%M:%S' %></div>
    <div class="text-xs text-gray-700 pl-1">Updated at: <%= @post.updated_at.localtime.strftime '%Y-%m-%d %H:%M:%S' %></div>
  </div>

  <div class="post-actions mt-4">
    <%= link_warning_button 'Edit', edit_post_path(@post) %>
    <%= link_danger_button 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

</div>
