<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><strong><%= link_to post.title, post %></strong></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn-item-action' %></td>
        <td><%= link_to 'Destroy', post, class: 'btn-item-action', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '+ New Post', new_post_path, class: 'btn-new-post' %>
